<html>
    <head>
        <% include ../head.ejs %>
    </head>
    <body>
    <% include navbar.ejs %>


    <div class="container" style="padding-top: 60px;">
        <h1 class="page-header">Book Details</h1>
        <div class="row">
            <!-- left column -->
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="text-center">
                    <img src="<%= singleBook.coverImage %>" class="img-responsive" alt="<%= singleBook.title %>">
                </div>
            </div>
            <!-- edit form column -->
            <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
                <h3>Book info</h3>
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Title:</label>
                        <div class="col-lg-8">
                            <input class="form-control" value="<%= singleBook.title %>" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">ISBN:</label>
                        <div class="col-lg-8">
                            <input class="form-control" value="<%= singleBook.ISBN %>" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Author:</label>
                        <div class="col-lg-8">
                            <input class="form-control" value="<%= singleBook.author %>" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Tags:</label>
                        <div class="col-lg-8">
                            <input class="form-control" value="<%= singleBook.genre_tags %>" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Price:</label>
                        <div class="col-md-8">
                            <input class="form-control" value="<%= singleBook.unitPrice %>" type="number" step="any">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input class="btn btn-primary" value="Save Changes" type="button">
                            <span></span>
                            <input class="btn btn-default" value="Cancel" type="reset">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include ../scripts.ejs %>
    </body>
</html>